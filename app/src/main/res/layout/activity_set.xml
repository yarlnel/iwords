<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SetActivity"
android:background="@drawable/goodfon"
>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/scrollView"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                      android:text="Здраствуй пользователь\nдовай попробуем разобраться \n как повысить твой словарный запас!\n\nПри входе в приложение \n мы видем 4 экрана : "

                      android:gravity="center"
                      android:textSize="20dp"
            />
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/main" android:id="@+id/imageView"
                    android:layout_weight="1"/>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>